<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="@dimen/padding_bottom"
    android:paddingLeft="@dimen/padding_sides"
    android:paddingRight="@dimen/padding_sides">


    <LinearLayout
        android:paddingTop="@dimen/padding_top"
        android:paddingBottom="@dimen/padding_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_normal">

        <!-- Header -->
        <TextView
            android:paddingLeft="@dimen/padding_sides"
            android:paddingRight="@dimen/padding_sides"
            android:id="@+id/textViewBulletinHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Header1"
            android:textAppearance="@style/ListTitle" />
        <!-- Message -->
        <TextView
            android:id="@+id/textViewBulletinMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Message1............................................................
            .............................................................................."
            android:textAppearance="@style/ListBody"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>



</LinearLayout>
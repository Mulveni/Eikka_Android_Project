<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/iconColorLight">

    <ImageButton
        android:id="@+id/buttonClosePopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <!-- Name -->
    <TextView
        android:id="@+id/textViewHousingPopupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <!-- Address -->
    <TextView
        android:id="@+id/textViewHousingPopupAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewHousingPopupName"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <!-- Apartments -->
    <TextView
        android:id="@+id/textViewHousingPopupApartments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartments"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewHousingPopupAddress"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <!-- PropertyManagement -->
    <TextView
        android:id="@+id/textViewHousingPropertyManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PropertyManagement"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewHousingPopupApartments"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <!-- WasteManagement -->
    <TextView
        android:id="@+id/textViewHousingPopupWasteManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WasteManagement"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewHousingPropertyManagement"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>